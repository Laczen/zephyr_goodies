menuconfig ZEPHYR_SHARED_DATA
	bool "Zephyr shared data driver"
	help
	  Enables support for the zephyr shared data driver.

if ZEPHYR_SHARED_DATA

config ZEPHYR_SHARED_DATA_INIT_PRIORITY
	int "Shared data devices init priority"
	default 40
	help
	  Shared data devices initialization priority,

module = ZEPHYR_SHARED_DATA
module-str = zephyr_shared_data
source "subsys/logging/Kconfig.template.log_config"

endif # ZEPHYR_SHARED_DATA